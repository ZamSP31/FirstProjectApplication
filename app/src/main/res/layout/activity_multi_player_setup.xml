<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    android:padding="16dp">

    <TextView
        android:id="@+id/setupTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Multi-Player Setup"
        android:textSize="32sp"
        android:textColor="#000000"
        android:fontFamily="@font/bangers"
        android:textAlignment="center"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/playerNameInput"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_border"
        android:hint="Enter player name"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/setupTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnAddPlayer" />

    <Button
        android:id="@+id/btnAddPlayer"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Add"
        android:textSize="16sp"
        android:fontFamily="@font/bangers"
        android:backgroundTint="#8FA17F"
        android:textColor="#FFFFFF"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/playerNameInput"
        app:layout_constraintBottom_toBottomOf="@id/playerNameInput"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playerListRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/playerNameInput"
        app:layout_constraintBottom_toTopOf="@id/btnStartGame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnStartGame"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Start Game"
        android:textSize="22sp"
        android:fontFamily="@font/bangers"
        android:backgroundTint="#6F664E"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/btnBackFromSetup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnBackFromSetup"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Back"
        android:textSize="20sp"
        android:fontFamily="@font/bangers"
        android:backgroundTint="#B89F6B"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>