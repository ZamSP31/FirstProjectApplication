<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/second_image"
    tools:context=".SecondPage">

    <LinearLayout
        android:id="@+id/revealContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:background="@drawable/card_border"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/nameTview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bangers"
            android:layout_marginBottom="16dp"
            android:text="Hello, Name!"
            android:textColor="#000000"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/passageTview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lucky"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:text="What's your most embarrassing moment?"
            android:textColor="#000000"
            android:textSize="45sp" />

        <Button
            android:id="@+id/completeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#6F664E"
            android:elevation="4dp"
            android:fontFamily="@font/bangers"
            android:text="Mark as Complete"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/againButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#8FA17F"
            android:elevation="4dp"
            android:fontFamily="@font/bangers"
            android:text="Again"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/homeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#B89F6B"
            android:elevation="4dp"
            android:fontFamily="@font/bangers"
            android:text="Back to Home"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>