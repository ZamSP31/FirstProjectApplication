<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="✅"
        android:textSize="56sp"
        android:gravity="center"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Challenge Complete!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/bangers"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <View
        android:layout_width="80dp"
        android:layout_height="3dp"
        android:background="#6F664E"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/completionMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How well did you complete the challenge?"
        android:textSize="16sp"
        android:textColor="#333333"
        android:fontFamily="@font/lucky"
        android:textAlignment="center"
        android:layout_marginBottom="20dp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:numStars="5"
        android:rating="3"
        android:stepSize="0.5"
        android:progressTint="#FFD700"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⭐ Rate your performance ⭐"
        android:textSize="14sp"
        android:textColor="#666666"
        android:textAlignment="center" />

</LinearLayout>