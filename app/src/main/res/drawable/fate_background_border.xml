<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Soft beige background for contrast -->
    <solid android:color="#FFF8E1" /> <!-- Light warm color -->

    <!-- Brownish border -->
    <stroke
        android:width="2dp"
        android:color="#8B5E3C" /> <!-- Rich brown tone -->

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Internal padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>